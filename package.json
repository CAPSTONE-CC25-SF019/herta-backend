{
  "name": "be-capstone.project.dbc.bootcamp",
  "version": "1.0.0",
  "description": "This template project for capstone project from dbs bootcamp",
  "license": "MIT",
  "author": "Tirta Hakim Pambudhi",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:validate": "prisma validate",
    "db:change": "npm run db:validate && npm run db:generate && npm run db:push",
    "db:seed": "prisma db seed",
    "db:reset": "prisma db push --force-reset && prisma db push",
    "compose:dev:up": "APP_ENV=dev docker compose up -d",
    "compose:dev:down": "APP_ENV=dev docker compose down",
    "compose:dev:list": "APP_ENV=dev docker compose ps",
    "test": "mocha",
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix ",
    "cert:jwe": "node src/utils/generateKey.js --alg=\"ECDH-ES\" --curve=\"X25519\" --name=\"jwe-key\"",
    "cert:jws:auth": "node src/utils/generateKey.js --alg=\"EdDSA\" --curve=\"Ed25519\" --name=\"jws-access-token-key\" && node src/utils/generateKey.js --alg=\"EdDSA\" --curve=\"Ed25519\" --name=\"jws-refresh-token-key\"",
    "cert:jws:fp": "node src/utils/generateKey.js --alg=\"EdDSA\" --curve=\"Ed25519\" --name=\"jws-fp-key\"",
    "cert:clear": "rm -rf cert/*",
    "start:dev": "node --env-file=.env src/index.js"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "csv-parser": "^3.2.0",
    "hapi-swagger": "^17.3.2",
    "joi": "^17.13.3",
    "jose": "^6.0.8",
    "prisma-soft-delete-middleware": "^1.3.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.21.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "babel-loader": "^10.0.0",
    "chai": "^5.2.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.2",
    "prisma": "^6.4.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
